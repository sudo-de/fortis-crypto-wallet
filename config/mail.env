# Email Configuration for Crypto Wallet
# Choose your email provider: GMAIL, OUTLOOK, SENDGRID, MAILGUN, or SMTP

# Email Provider Selection
EMAIL_PROVIDER=GMAIL

# Gmail Configuration
GMAIL_USERNAME=sudo.sde24@gmail.com
GMAIL_PASSWORD=your-app-specific-password
GMAIL_SMTP_HOST=smtp.gmail.com
GMAIL_SMTP_PORT=587
GMAIL_SMTP_SECURE=false

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@xcryptovault.com
SENDGRID_FROM_NAME=XCryptoVault

# Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain.com
MAILGUN_FROM_EMAIL=noreply@xcryptovault.com
MAILGUN_FROM_NAME=XCryptoVault

# SMTP Configuration (Generic)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-password
SMTP_SECURE=false
SMTP_FROM_EMAIL=noreply@xcryptovault.com
SMTP_FROM_NAME=XCryptoVault

# Email Templates Configuration
EMAIL_TEMPLATES_PATH=./templates/email/
DEFAULT_FROM_EMAIL=noreply@xcryptovault.com
DEFAULT_FROM_NAME=XCryptoVault
SUPPORT_EMAIL=support@xcryptovault.com

# Email Types and Subjects
PASSWORD_RESET_SUBJECT=Reset Your XCryptoVault Password
WELCOME_SUBJECT=Welcome to XCryptoVault!
TRANSACTION_ALERT_SUBJECT=Transaction Alert - XCryptoVault
SECURITY_ALERT_SUBJECT=Security Alert - XCryptoVault
LOGIN_ALERT_SUBJECT=New Login Detected - XCryptoVault

# Email Rate Limiting
EMAIL_RATE_LIMIT_PER_HOUR=100
EMAIL_RATE_LIMIT_PER_DAY=1000
EMAIL_RATE_LIMIT_PER_USER_PER_HOUR=10

# Email Queue Configuration
EMAIL_QUEUE_ENABLED=true
EMAIL_QUEUE_MAX_RETRIES=3
EMAIL_QUEUE_RETRY_DELAY=300000
EMAIL_QUEUE_BATCH_SIZE=50

# Email Security
EMAIL_ENCRYPTION_ENABLED=true
EMAIL_SIGNATURE_ENABLED=true
EMAIL_TRACKING_ENABLED=true
EMAIL_UNSUBSCRIBE_ENABLED=true

# Email Validation
EMAIL_VALIDATION_ENABLED=true
EMAIL_BOUNCE_HANDLING=true
EMAIL_COMPLAINT_HANDLING=true

# Development/Testing
EMAIL_TEST_MODE=false
EMAIL_TEST_RECIPIENT=test@xcryptovault.com
EMAIL_DEBUG_MODE=false
EMAIL_LOG_LEVEL=info

# Production Settings
EMAIL_PRODUCTION_MODE=true
EMAIL_BACKUP_PROVIDER=SENDGRID
EMAIL_FAILOVER_ENABLED=true
